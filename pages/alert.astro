---
import ALERT from '../messages/Alert.astro';
import LAYOUT from '../layouts/Demo.astro';
---

<LAYOUT description="Alert" title="警告信息">
	<ALERT title="这是默认警告信息，仅包含标题" />
	<ALERT
		title="这是正确信息"
		message="这里是提示内容，可以关闭，且标记为重点信息（带边框）！ 警告信息只能手工关闭。"
		theme="success"
		important
		closeable
	/>
	<ALERT title="这是默认警告信息，仅包含标题" mini />
	<ALERT
		title="这是正确信息"
		message="这里是提示内容，可以关闭，且标记为重点信息（带边框）！ 警告信息只能手工关闭。"
		theme="success"
		important
		mini
		closeable
	/>
</LAYOUT>

<script>
	import type { ITheme } from '../types';
	import { showNotice } from '../libs/client';

	const themes: ITheme[] = ['primary', 'secondary', 'info', 'warning', 'danger', 'success'];
	themes.forEach((theme, index) => {
		const important = index % 3 === 0;
		const message = `第 ${index + 1} 个 Alert，使用了 ${theme} 样式，本次 Alert ${important ? '很重要' : '不重要'}`;
		const title = `样式：${theme}`;
		setTimeout(() => {
			showNotice(message, title, theme, important);
		}, index * 3000);
	});
</script>
