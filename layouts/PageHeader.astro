export interface Props {
	/** 标题 */
	title: string;

	/** 标题描述 */
	pretitle?: string;

	/** 副标题 */
	subtitle?: string;

	/** 自定义类名 */
	class?: string;
}

const { title, pretitle, subtitle, class: className, ...props } = Astro.props as Props;
---

<div class:list={['page-header', className]} {...props}>
	<div class="row align-items-center">
		{
			Astro.slots.has('icon') && (
				<div class="col-auto">
					<slot name="icon" />
				</div>
			)
		}

		<div class="col">
			{pretitle && <div class="page-pretitle">{pretitle}</div>}
			<h2 class="page-title">{title}</h2>
			{subtitle && <div class="page-subtitle">{subtitle}</div>}
			{
				Astro.slots.has('subtitle') && (
					<div class="page-subtitle">
						<slot name="subtitle" />
					</div>
				)
			}
		</div>
		{
			Astro.slots.has('default') && (
				<div class="col-auto ms-auto">
					<slot name="default" />
				</div>
			)
		}
	</div>
</div>
