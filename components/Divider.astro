import type { ITheme } from '../types';
import { ClassClear } from '../libs';

export interface Props {
	/** 显示文本 */
	text?: string;

	/** 主题 */
	theme?: ITheme;

	/** 位置 */
	position?: 'left' | 'center' | 'right';

	/** 自定义样式 */
	class?: string;
}

const { text, position = 'center', theme, class: className, ...props } = Astro.props;
const classList = ClassClear([
	'hr-text',
	theme && `text-${theme}`,
	position && `hr-text-${position}`,
	className
]);
---

<div class={classList} {...props}><slot>{text}</slot></div>
