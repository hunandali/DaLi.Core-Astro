import { ClassClear } from '../libs';

interface Props {
	code: string;
	language?: string;
	lineNumbers?: boolean;
}

const { code, language = 'plaintext', lineNumbers = true } = Astro.props;

// const id = `code-${Math.random().toString(36).substring(2, 9)}`;

